<!DOCTYPE html>
<html lang="es">
  <head>
    <%-include('../partials/head') %> 
    <!-- {title: 'Todos los cursos'} -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css"/>
    <link rel="stylesheet" href="/css/catalogo.css">
    <title>Cursos</title>
  </head>

  <body class="body">
    <%-include('../partials/header') %>

    <main>

        <div class="main">

          <% for(let prod of ps) {%> 
          <section class="setion">
            <div class="card">
              <div class="card-info">
              <figure class="top">
                <img src="/img/licores/<%= prod.imagen%> ">
              </figure>
              <div class="bottom">
              <section class="descripcion-prod">
                <div class="titulo-p">
                  <h2><%= prod.nombre %> </h2>
                </div>
                <div class="desc">
                  <p>  <%= prod.descripcion %></p>
                </div>
                <div class="info-precios">
                    <label>$<%= prod.precio %></label>
                </div>
                <div class="cont-bot">
                  <% if(admi) {%> 
                  <div class="s-llave">
                    <a href="/producto/editar/<%= prod.id %> " class="llave"><i class="fa-solid fa-gear"></i></a>
                  </div>
                  <form action="/producto/eliminar/<%= prod.id%>?_method=DELETE" method="POST" >
                    <button id="eliminar" class="buttom" type="submit"><i class="fa-solid fa-trash"></i></button>
                  </form>
                  <% } %> 
                  <div class="agg"><a  id="btn-agg" href="#">Agregar</a></div>
                </div>
                </div>
              </div>
            </div>
          </section>
          <% } %>
        </div>
      


    </main>

    <%-include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>