<!DOCTYPE html>
<html lang="es">
  <head>
    <%-include('../partials/head') %> 
    <link rel="stylesheet" href="/css/editar-usuario.css">
    <title>Editar Perfil</title>
  </head>

<body class="body">
  
  <%-include('../partials/header') %>

  <div class="marco">
    <form class="form-perfil" action="/usuario/perfil" method="GET" >
        <a href="/usuario/vista-perfil" class="volv">Volver</a>
    </form>
    <div class="titulo">
      <p>Información de la cuenta</p>
    </div>
    <form class="form-cargar" action="/usuario/editar-usuarios" method="POST" > 
        <section>
            <div class="file">
              <div class="cont-imgp">
                <img src="/img/perfil/<%= i.imagen %> " class="imgpf">
              </div>
            </div>
            <div class="inputs">
              <input class="" type="text" name="nombre" placeholder="Nombre: <%= i.nombre %>" value="<%= i.nombre %>">
              <% if (locals && locals.errors) { %>
                <% if (locals.errors[0].param == "nombre") { %>
                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                <% } %>
              <% } %>
              <input class="" type="text" name="apellido" placeholder="Apellido: <%= i.apellido %>" value="<%= i.apellido %>">
              <% if (locals && locals.errors) { %>
                <% if (locals.errors[0].param == "apellido") { %>
                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                <% } %>
              <% } %>
              <input class="" type="text" name="email" placeholder="Email: <%= i.email%>" value="<%= i.email%>">
              <% if (locals && locals.errors) { %>
                <% if (locals.errors[0].param == "email") { %>
                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                <% } %>
              <% } %>
              <input class="" type="text" name="telefono" placeholder="Teléfono: <%= i.telefono%>" value="<%= i.telefono%>">
              <% if (locals && locals.errors) { %>
                <% if (locals.errors[0].param == "telefono") { %>
                  <h3 class="errors-validation"> <%= locals.errors[0].msg %> </h3>
                <% } %>
              <% } %>
            </div>
            <div class="inputs">
              <div class="pasw-tit"><p>Cambio de contraseña</p></div>
              <input class="" type="text" name="oldpassword" placeholder="Contraseña actual">
              <input class="" type="text" name="oldpassword" placeholder="Contraseña nueva">
            </div>
            <a> <button type="submit" id="boton-enviar">Confirmar</button> </a>
        </section>
    </form>
  </div>
  
  <%-include('../partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>